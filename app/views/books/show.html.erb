<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'users/list', users: @users %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <% if @book.image.attached? %>
                <%= image_tag @book.image, size: "100x100" %>
              <% else %>
                <%= image_tag "default-image.jpg", size: "100x100" %>
              <% end %>
              <p><%= link_to current_user.name, user_path %></p>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <td><%= link_to "Edit", edit_book_path, class:"btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-sm btn-danger" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
